<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Dashboard - ReWear</title>
    <link rel="stylesheet" href="/styles/HomePage.css" />
    <style>
      body {
        margin: 0;
        font-family: 'Montserrat', 'Segoe UI', Arial, sans-serif;
        background: linear-gradient(120deg, #fbc2eb 0%, #a6c1ee 100%);
        min-height: 100vh;
      }
      .dashboard-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.2rem 2rem 1.2rem 1.2rem;
        background: #fff;
        box-shadow: 0 2px 12px #a6c1ee33;
      }
      .user-avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background: linear-gradient(135deg, #38b2ac 60%, #fbc2eb 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-size: 1.5rem;
        font-weight: 700;
        margin-right: 1rem;
      }
      .dashboard-search {
        width: 100%;
        max-width: 500px;
        margin: 2rem auto 1.5rem auto;
        display: flex;
        justify-content: center;
      }
      .dashboard-search input {
        width: 100%;
        padding: 0.8rem 1.2rem;
        border-radius: 24px;
        border: 1.5px solid #a6c1ee;
        font-size: 1.1rem;
        outline: none;
        box-shadow: 0 2px 8px #a6c1ee22;
        transition: border 0.2s;
      }
      
      /* --- Banner Carousel Styles --- */
      .dashboard-carousel-container {
        width: 100vw !important;
        max-width: 100vw !important;
        overflow: hidden !important;
        margin-bottom: 2rem;
        position: relative;
        background: linear-gradient(90deg, #fbc2eb 0%, #a6c1ee 100%);
        box-shadow: 0 4px 24px #805ad533;
        border-radius: 0 0 24px 24px;
      }
      .dashboard-carousel {
        display: flex !important;
        transition: transform 0.7s cubic-bezier(.77,0,.18,1) !important;
        width: 400vw !important;
      }
      .dashboard-carousel-img {
        width: 100vw !important;
        height: 480px !important;
        object-fit: cover !important;
        border-radius: 0 !important;
        box-shadow: 0 4px 16px #805ad555 !important;
        flex-shrink: 0 !important;
        transition: box-shadow 0.3s !important;
        display: block !important;
      }
      .dashboard-carousel-img:hover {
        box-shadow: 0 8px 32px #805ad599 !important;
      }
      .dashboard-carousel-dots {
        text-align: center !important;
        position: absolute !important;
        left: 0; right: 0; bottom: 18px;
        z-index: 2 !important;
      }
      .dashboard-carousel-dots .dot {
        display: inline-block !important;
        width: 14px !important;
        height: 14px !important;
        margin: 0 8px !important;
        background: #fff !important;
        border-radius: 50% !important;
        box-shadow: 0 2px 8px #805ad555 !important;
        cursor: pointer !important;
        border: 2px solid #805ad5 !important;
        opacity: 0.7 !important;
        transition: background 0.2s, opacity 0.2s, transform 0.2s !important;
      }
      .dashboard-carousel-dots .dot.active {
        background: #805ad5 !important;
        opacity: 1 !important;
        transform: scale(1.2) !important;
      }
      @media (max-width: 900px) {
        .dashboard-carousel-img {
          height: 220px !important;
        }
        .dashboard-carousel-container {
          border-radius: 0 0 12px 12px !important;
        }
      }
      .dashboard-banners {
        width: 100vw;
        max-width: 100%;
        display: flex;
        overflow-x: auto;
        gap: 1.5rem;
        padding: 0 2rem 1.5rem 2rem;
      }
      .dashboard-banner-img {
        height: 180px;
        min-width: 320px;
        border-radius: 18px;
        object-fit: cover;
        box-shadow: 0 4px 16px #805ad555;
      }
      .dashboard-categories {
        display: flex;
        gap: 1.2rem;
        justify-content: center;
        margin: 2rem 0 1.5rem 0;
        flex-wrap: wrap;
      }
      .category-chip {
        background: linear-gradient(90deg, #38b2ac 0%, #fbc2eb 100%);
        color: #fff;
        border-radius: 24px;
        padding: 0.7rem 1.8rem;
        font-size: 1rem;
        font-weight: 600;
        box-shadow: 0 2px 8px #fbc2eb33;
        cursor: pointer;
        border: none;
        transition: background 0.2s, color 0.2s;
      }
      .category-chip:hover {
        background: linear-gradient(90deg, #fbc2eb 0%, #38b2ac 100%);
        color: #2d3748;
      }
      .dashboard-products {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        justify-content: center;
        padding: 2rem 2rem 3rem 2rem;
      }
      .product-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 16px #805ad555;
        width: 220px;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1.2rem 1rem 1.5rem 1rem;
        transition: transform 0.2s, box-shadow 0.2s;
      }
      .product-card:hover {
        transform: translateY(-6px) scale(1.03);
        box-shadow: 0 8px 32px #38b2ac33;
      }
      .product-img {
        width: 100%;
        height: 140px;
        object-fit: cover;
        border-radius: 12px;
        margin-bottom: 1rem;
      }
      .product-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #38b2ac;
        margin-bottom: 0.5rem;
        text-align: center;
      }
      .product-category {
        font-size: 0.95rem;
        color: #805ad5;
        margin-bottom: 0.7rem;
      }
      .product-price {
        font-size: 1.1rem;
        color: #2d3748;
        font-weight: 600;
      }
    </style>
  </head>
  <body>
    <header class="dashboard-header">
      <button class="user-avatar" title="Open Profile" style="border:none; background:none; padding:0; cursor:pointer;" onclick="window.location.href='/profile'">
        <div style="width:48px; height:48px; border-radius:50%; background:#805ad5; color:#fff; display:flex; align-items:center; justify-content:center; font-size:2rem; font-weight:bold;">
          <%= username.charAt(0).toUpperCase() %>
        </div>
      </button>
      <h1 style="font-family: 'Montserrat', cursive; color: #805ad5; font-size: 2rem; margin: 0;">ReWear</h1>
      <div></div>
    </header>
    <!-- Removed user info, listings, and purchases from dashboard main body as requested -->
    <div class="dashboard-search">
      <input type="text" placeholder="Search for products, categories..." />
    </div>
    <div style="display:flex; justify-content:center; margin-bottom:2rem;">
      <button onclick="window.location.href='/sell'" style="background:#805ad5; color:#fff; border:none; border-radius:24px; padding:0.8rem 2rem; font-size:1.1rem; font-weight:600; cursor:pointer; box-shadow:0 2px 8px #805ad533;">Add a Dress/Cloth to Sell</button>
    </div>
    <!-- Banner Carousel -->
    <div class="dashboard-carousel-container">
      <div class="dashboard-carousel">
        <img src="/images/banner1.png" alt="Banner 1" class="dashboard-carousel-img" />
        <img src="/images/banner2.png" alt="Banner 2" class="dashboard-carousel-img" />
        <img src="/images/banner3.png" alt="Banner 3" class="dashboard-carousel-img" />
        <img src="/images/banner4.png" alt="Banner 4" class="dashboard-carousel-img" />
      </div>
      <div class="dashboard-carousel-dots">
        <span class="dot" onclick="showSlide(0)"></span>
        <span class="dot" onclick="showSlide(1)"></span>
        <span class="dot" onclick="showSlide(2)"></span>
        <span class="dot" onclick="showSlide(3)"></span>
      </div>
    </div>
    <div class="dashboard-categories">
      <button class="category-chip">Jeans</button>
      <button class="category-chip">Western Wear</button>
      <button class="category-chip">Casual Wear</button>
      <button class="category-chip">Ethnic Wear</button>
      <button class="category-chip">T-Shirts</button>
      <button class="category-chip">Dresses</button>
      <button class="category-chip">Kids</button>
    </div>
    <div class="dashboard-products">
      <% if (products && products.length > 0) { %>
        <% products.forEach(function(product, idx) { %>
          <% var imgSrc = (product.photo && product.photo.trim() !== '') ? '/uploads/' + product.photo : '/images/product-placeholder.jpg'; %>
          <div class="product-card">
            <img src="<%= imgSrc %>" alt="Product Image" class="product-img" style="cursor:pointer;" onclick="showProductModal(<%= idx %>)" />
            <div class="product-title"><%= product.clothesname %></div>
            <div class="product-category"><%= product.category %></div>
            <div class="product-price">Points: <%= product.points %></div>
            <div style="font-size:0.95rem; color:#805ad5; margin-bottom:0.5rem;">Size: <%= product.size %> | Texture: <%= product.texture %> | Colour: <%= product.colour %></div>
            <div style="font-size:0.95rem; color:#805ad5; margin-bottom:0.5rem;">Seller: <%= product.username %></div>
            <form action="/buy/<%= product.id %>" method="POST">
              <button type="submit" style="background:#805ad5; color:#fff; border:none; border-radius:12px; padding:0.4rem 1rem; font-weight:600; cursor:pointer; margin-top:0.5rem;">Buy/Swap</button>
            </form>
          </div>
        <% }); %>
      <% } else { %>
        <div style="text-align:center; color:#805ad5; font-size:1.2rem;">No products available yet.</div>
      <% } %>
    </div>

    <!-- Product Modal -->
    <div id="productModal" style="display:none; position:fixed; top:0; left:0; width:100vw; height:100vh; background:rgba(0,0,0,0.5); z-index:1000; align-items:center; justify-content:center;">
      <div id="modalContent" style="background:#fff; border-radius:16px; padding:2rem; max-width:500px; width:90vw; box-shadow:0 8px 32px #805ad555; position:relative;">
        <span style="position:absolute; top:12px; right:18px; font-size:2rem; color:#805ad5; cursor:pointer;" onclick="closeProductModal()">&times;</span>
        <img id="modalImg" src="" alt="Product Image" style="width:100%; height:220px; object-fit:cover; border-radius:12px; margin-bottom:1rem;" />
        <div id="modalTitle" class="product-title"></div>
        <div id="modalCategory" class="product-category"></div>
        <div id="modalPrice" class="product-price"></div>
        <div id="modalDetails" style="font-size:0.95rem; color:#805ad5; margin-bottom:0.5rem;"></div>
        <div id="modalSeller" style="font-size:0.95rem; color:#805ad5; margin-bottom:0.5rem;"></div>
        <form id="modalForm" action="#" method="POST">
          <button type="submit" style="background:#805ad5; color:#fff; border:none; border-radius:12px; padding:0.4rem 1rem; font-weight:600; cursor:pointer; margin-top:0.5rem;">Buy/Swap</button>
        </form>
      </div>
    </div>

    <script>
      const products = JSON.parse('<%= JSON.stringify(products) %>');
      function showProductModal(idx) {
        const product = products[idx];
        document.getElementById('modalImg').src = product.photo ? ('/uploads/' + product.photo) : '/images/product-placeholder.jpg';
        document.getElementById('modalTitle').textContent = product.clothesname;
        document.getElementById('modalCategory').textContent = product.category;
        document.getElementById('modalPrice').textContent = 'Points: ' + product.points;
        document.getElementById('modalDetails').textContent = `Size: ${product.size} | Texture: ${product.texture} | Colour: ${product.colour}`;
        document.getElementById('modalSeller').textContent = 'Seller: ' + product.username;
        document.getElementById('modalForm').action = '/buy/' + product.id;
        document.getElementById('productModal').style.display = 'flex';
      }
      function closeProductModal() {
        document.getElementById('productModal').style.display = 'none';
      }
      let currentSlide = 0;
      const totalSlides = 4;
      let slideInterval;
      function showSlide(idx) {
        currentSlide = idx;
        const carousel = document.querySelector('.dashboard-carousel');
        if (carousel) {
          carousel.style.transform = 'translateX(-' + (idx * 100) + 'vw)';
        }
        const dots = document.querySelectorAll('.dashboard-carousel-dots .dot');
        dots.forEach((dot, i) => {
          dot.classList.toggle('active', i === idx);
        });
      }
      function nextSlide() {
        currentSlide = (currentSlide + 1) % totalSlides;
        showSlide(currentSlide);
      }
      function startCarousel() {
        showSlide(0);
        slideInterval = setInterval(nextSlide, 3500);
      }
      window.addEventListener('DOMContentLoaded', startCarousel);
    </script>
  </body>
</html>
